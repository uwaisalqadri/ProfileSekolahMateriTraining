<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".RegisterActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp">

        <EditText
            android:id="@+id/form_npsn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="@string/npsn" />

        <EditText
            android:id="@+id/form_nama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/form_npsn"
            android:layout_marginTop="10dp"
            android:hint="@string/email" />

        <TextView
            android:id="@+id/text_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/form_nama"
            android:layout_marginTop="10sp"
            android:paddingStart="5dp"
            android:text="@string/text_spinner" />

        <Spinner
            android:id="@+id/form_sekolah"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/text_spinner" />


        <EditText
            android:id="@+id/form_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/form_sekolah"
            android:layout_marginTop="10dp"
            android:inputType="textPassword"
            android:hint="@string/password" />

        <Button
            android:id="@+id/button_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/form_password"
            android:text="@string/button_register"
            android:textAllCaps="false" />

        <TextView
            android:id="@+id/question_already"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/button_register"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="111dp"
            android:text="@string/have_account"
            android:textAlignment="center" />

        <ProgressBar
            android:id="@+id/progress_circular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/question_already"
            android:layout_marginTop="15dp"
            android:visibility="gone"/>

    </RelativeLayout>




</RelativeLayout>